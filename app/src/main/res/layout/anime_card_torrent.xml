<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="10dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2.5dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <HorizontalScrollView
                                android:scrollbars="none"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >

                                <TextView
                                    android:id="@+id/titulo_torrent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="45dp"

                                    android:layout_marginBottom="4dp"
                                    android:fontFamily="@font/zud"
                                    android:padding="10dp"
                                    android:text="Watashi wa konichiwa"
                                    android:textColor="@color/black"
                                    android:textSize="26dp" />

                            </HorizontalScrollView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="5"
                            android:id="@+id/contenedor_estrella_favorita"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            >
                            <ImageView
                                android:id="@+id/estrella_favorita_icono"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/estrella_favorito_icono"
                                app:tint="@color/amarillo_favorito"
                                />
                        </LinearLayout>

                    </LinearLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/black"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="13dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tamano_torrent"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginHorizontal="10dp"
                            android:fontFamily="@font/zud"
                            android:text="1001 MiB"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/fecha_actualizacion_torrent"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginHorizontal="10dp"
                            android:fontFamily="@font/zud"
                            android:text="2025-10-5"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/flecha_arriba_torrent" />

                        <TextView
                            android:id="@+id/cantidad_seeders"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:fontFamily="@font/zud"
                            android:text="117"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/flecha_abajo_torrent" />

                        <TextView
                            android:id="@+id/cantidad_leechers"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:fontFamily="@font/zud"
                            android:text="117"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/black"
                        app:cardCornerRadius="5dp"
                        android:layout_marginBottom="5dp">

                        <ImageButton
                            android:id="@+id/imagebutton_download"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="-3dp"
                            android:layout_marginTop="-4dp"
                            android:layout_marginRight="-3dp"
                            android:layout_marginBottom="-4dp"
                            android:backgroundTint="@color/naranja_descargar"
                            android:padding="0dp"

                            android:scaleType="centerCrop"
                            android:src="@drawable/fondo_boton"
                            app:tint="@color/black">

                        </ImageButton>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/zud_bold"
                            android:gravity="center"
                            android:text="Download"
                            android:textColor="@color/black"
                            android:textSize="25sp" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/magnet_boton"
                        android:layout_width="0dp"
                        android:layout_height="0dp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>
