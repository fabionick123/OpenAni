<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="10dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2.5dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2.5">
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <TextView
                            android:id="@+id/titulo_torrent"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:padding="10dp"
                            android:text="Watashi wa konichiwa"
                            android:textSize="24dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/zud"
                            android:layout_marginBottom="4dp"
                            />
                    </HorizontalScrollView>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        >
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="13dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tamano_torrent"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="1001 MiB"
                            android:fontFamily="@font/zud"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="10dp"/>

                        <TextView
                            android:id="@+id/fecha_actualizacion_torrent"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="2025-10-5"
                            android:fontFamily="@font/zud"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="10dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/flecha_arriba_torrent"
                            android:layout_marginLeft="5dp" />

                        <TextView
                            android:id="@+id/cantidad_seeders"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="117"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/zud"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/flecha_abajo_torrent"
                            android:layout_marginLeft="5dp" />

                        <TextView
                            android:id="@+id/cantidad_leechers"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="117"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/zud"/>

                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/black"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="10dp"
                        >
                        <ImageButton
                            android:id="@+id/imagebutton_download"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="-4dp"
                            android:layout_marginBottom="-4dp"
                            android:layout_marginLeft="-3dp"
                            android:layout_marginRight="-3dp"
                            android:padding="0dp"
                            android:src="@drawable/fondo_boton"
                            android:scaleType="centerCrop"
                            app:tint="@color/black"
                            android:backgroundTint="@color/naranja_descargar"
                            >
                        </ImageButton>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Download"
                            android:fontFamily="@font/zud_bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="25sp"
                            />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/magnet_boton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingVertical="10dp"
                    android:layout_marginHorizontal="6dp"
                    >
                    <View
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="11"
                    android:orientation="vertical"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        >
                        <ImageView
                            android:id="@+id/estrella_favorita_icono"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/estrella_favorita_icono"
                            app:tint="@color/amarillo_favorito"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        >
                        <ImageView
                            android:id="@+id/mano_like_icono"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/mano_like_icono"
                            app:layout_constraintRight_toRightOf="parent"
                            />
                        <TextView
                            android:id="@+id/cantidad_likes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/zud_bold"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <ImageView
                            android:id="@+id/mano_dislike_icono"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/mano_dislike_icono"
                            app:layout_constraintRight_toRightOf="parent"
                            />
                        <TextView
                            android:id="@+id/cantidad_dislikes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="14sp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:fontFamily="@font/zud_bold"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>